<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/i"
    android:id="@+id/root_view"
    tools:context="com.example.smarttechmardan.musicactivity.MusicActivity">

    <View
        android:id="@+id/my_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_marginTop="90dp"
        android:id="@+id/imageProfile"
        android:src="@mipmap/i"
        app.siBorderWidth="10dp"
        app.siBorderColor="#000"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:background="#53000000"
        android:id="@+id/layoutBottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="40dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_download" />

        <Button
            android:layout_marginRight="40dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/ic_favorit" />

        <Button
            android:layout_marginRight="40dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/ic_refresh" />

        <Button
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="..."
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_above="@+id/layoutBottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_pause" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_pause" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_pause" />

    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:textColor="#ded7d7"
        android:textSize="16dp"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageProfile"
        android:layout_centerHorizontal="true"
        android:text="Momina Mustehsan" />


</RelativeLayout>
